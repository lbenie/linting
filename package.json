{
  "name": "@lbenie/linting",
  "version": "0.0.1",
  "description": "my opiniated rules",
  "repository": {
    "url": "https://github.com/lbenie/linting"
  },
  "keywords": [
    "eslint",
    "stylelint",
    "linting"
  ],
  "license": "MIT",
  "private": false,
  "files": [
    "eslint",
    "stylelint"
  ],
  "main": "./eslint/.eslintrc.js",
  "exports": {
    ".": {
      "eslint": "./eslint/.eslintrc.js",
      "stylelint": "./stylelint/.stylelint.js"
    }
  },
  "types": "dist/types/index.d.ts",
  "scripts": {
    "test": "concurrently -n vitest 'vitest --coverage'",
    "test:vitest": "vitest",
    "lint": "concurrently -n eslint, stylelint 'eslint src' 'stylelint src/**/*.styl'",
    "build": "vite build"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "10.0.1",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "9.0.4",
    "@semantic-release/npm": "10.0.5",
    "@semantic-release/release-notes-generator": "11.0.4",
    "@types/semantic-release": "20.0.1",
    "@typescript-eslint/eslint-plugin": "6.4.1",
    "@typescript-eslint/parser": "6.4.1",
    "all-contributors-cli": "6.26.1",
    "concurrently": "8.2.1",
    "eslint": "8.47.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-stylelint": "20.0.0",
    "eslint-plugin-functional": "6.0.0",
    "eslint-plugin-prettier": "5.0.0",
    "postcss": "8.4.28",
    "postcss-scss": "4.0.7",
    "postcss-styl": "0.12.3",
    "prettier": "3.0.2",
    "semantic-release": "21.0.9",
    "stylelint": "15.10.3",
    "stylelint-order": "6.0.3",
    "stylelint-stylus": "0.18.0",
    "tsutils": "3.21.0",
    "typescript": "5.1.6"
  },
  "peerDependencies": {
    "eslint": "8.47.0",
    "prettier": "3.0.2",
    "stylelint": "15.10.3",
    "typescript": "5.1.6"
  }
}
